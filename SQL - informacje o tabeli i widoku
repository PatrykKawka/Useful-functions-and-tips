SELECT 
    c.COLUMN_NAME,
    c.DATA_TYPE,
    c.CHARACTER_MAXIMUM_LENGTH,
    c.NUMERIC_PRECISION,
    c.NUMERIC_SCALE,
    c.IS_NULLABLE,
    COLUMNPROPERTY(OBJECT_ID(c.TABLE_SCHEMA + '.' + c.TABLE_NAME), c.COLUMN_NAME, 'IsIdentity') AS IsIdentity,
    dc.CONSTRAINT_NAME AS DefaultConstraint,
    cc.CONSTRAINT_NAME AS CheckConstraint,
    pk.CONSTRAINT_NAME AS PrimaryKey
FROM 
    INFORMATION_SCHEMA.COLUMNS c
    LEFT JOIN INFORMATION_SCHEMA.CONSTRAINT_COLUMN_USAGE dc 
        ON c.TABLE_NAME = dc.TABLE_NAME AND c.COLUMN_NAME = dc.COLUMN_NAME AND dc.CONSTRAINT_NAME LIKE 'DF_%'
    LEFT JOIN INFORMATION_SCHEMA.CONSTRAINT_COLUMN_USAGE cc 
        ON c.TABLE_NAME = cc.TABLE_NAME AND c.COLUMN_NAME = cc.COLUMN_NAME AND cc.CONSTRAINT_NAME LIKE 'CK_%'
    LEFT JOIN INFORMATION_SCHEMA.KEY_COLUMN_USAGE kc 
        ON c.TABLE_NAME = kc.TABLE_NAME AND c.COLUMN_NAME = kc.COLUMN_NAME
    LEFT JOIN INFORMATION_SCHEMA.TABLE_CONSTRAINTS pk 
        ON kc.CONSTRAINT_NAME = pk.CONSTRAINT_NAME AND pk.CONSTRAINT_TYPE = 'PRIMARY KEY'
WHERE 
    c.TABLE_NAME = 'NazwaTabeli';
